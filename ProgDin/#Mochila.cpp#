#include <iostream>
#define N 3

int max(int x,int y){
	if(x > y)
		return x;
	else
		return y;
}	

int mochila(int* p,int* b,int pmax){
	int tab[N][pmax+1];
	for(int i = 0;i < N;i++){		//Inicializar
		for(int j = 1;j <= pmax;j++){	//La
			if(j != 0)		//Tabla
				tab[i][j] = -1;	
		}
	}
	tab[0][0] = 0;
	for(int j = 1;j <= pmax;j++){
		if(j >= p[0])
			tab[0][j] = b[0]; 
		else
			tab[0][j] = 0;
	}
	
	for(int i = 1;i < N;i++){
		tab[i][0] = 0;
		for(int j = 1;j <= pmax;j++){
			if(j >= p[i] && tab[i-1][j] != 0){
	  
				tab[i][j] = max(tab[i - 1][j],(tab[i - 1][j - p[i]] + b[i]));
			}
			else
				tab[i][j] = 0;
		}
	}
	
	std::cout << std::endl;
	for(int i = 0;i < N;i++){
                for(int j = 0;j <= pmax;j++){
        		std::cout << tab[i][j] << " ";        
                }
		std::cout << std::endl;
        }

	return tab[N-1][pmax];
}


int main(){
	int p[N] = {9,6,5};
	int b[N] = {38,40,24};
	int pmax = 15;

	std::cout << "MÃ¡ximo beneficio obtenible: " << mochila(p,b,pmax) << std::endl;

	return 0;
}
